{% extends 'base.html.twig' %}

{% block title %} password modification {% endblock %}

{% block body %}
<div class="fx-section-space-8 bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="fx-card fx-card-tabs"> 
          <!-- card Body -->
          <div class="fx-card-body">
            <div class="fx-w-100">
              {% for flashError in app.flashes('error') %}
                <div class="alert alert-danger font-weight-bold" role="alert">{{ flashError }}</div>
              {% endfor %}
              {% for flashSuccess in app.flashes('success') %}
                <div class="alert alert-success font-weight-bold" role="alert">{{ flashSuccess }}</div>
              {% endfor %}
              <h2 class="fx-text-dark mb-5">Modifier votre mot de passe</h2>
              <div class="security-form">
                {{ form_start(form) }}
                {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div><!-- ./End Col -->
    </div>
  </div>
</div>
{% endblock %}
